<form id="treatment" name="treatment" method="post">
    <div class="form-group form-material">
        <label class="form-control-label">Treatment name <span class="required">*</span></label>
        <input type="text" id="treatment_name" class="form-control" name="treatment[name]" required="required" data-plugin="formMaterial" value="{{ treatment.name }}">
    </div>
    <div class="form-group form-material">
        <label class="form-control-label">Description <span class="required">*</span></label>
        <input type="text" id="treatment_description" class="form-control" name="treatment[description]" required="required" data-plugin="formMaterial" value="{{ treatment.description }}">
    </div>
    <div class="form-group form-material">
        <label class="form-control-label">Fare <span class="required">*</span></label>
        <input type="number" id="treatment_fare" class="form-control" name="treatment[fare]" required="required" data-plugin="formMaterial" value="{{ treatment.fare }}">
    </div>
    <div class="form-group form-material">
        <label class="form-control-label">Notes</label>
        <input type="text" id="treatment_notes" class="form-control" name="treatment[notes]" data-plugin="formMaterial" value="{{ treatment.notes }}">
    </div>
    <input type="hidden" id="treatment__token" name="treatment[_token]" value="{{ formTreatment._token.vars.value }}">
    <input type="hidden" id="treatment_id" name="treatment[id]" value="{{ treatment.id | default('') }}">
    <button type="button" class="btn btn-default btn-pure" data-dismiss="modal">Close</button>
    <button type="submit" id="treatment_save" class="btn btn-primary waves-effect waves-light" name="treatment[save]">Save treatment</button>
</form>

<script>
    $( document ).ready(function() {

        // Validation
        // ---------------------------------
        (function() {
            $('#treatment').formValidation({
                framework: "bootstrap4",
                button: {
                    selector: '#treatment_save'
                },
                icon: null,
                err: {
                    clazz: 'text-help'
                },
                row: {
                    invalid: 'has-danger'
                },
                fields: {
                    "treatment[name]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            },
                            stringLength: {
                                max: 50
                            }
                        }
                    },
                    "treatment[description]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            },
                            stringLength: {
                                max: 255
                            }
                        }
                    },
                    "treatment[fare]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            },
                            integer: {
                                message: 'Not valid number'
                            }
                        }
                    },
                    "treatment[description]": {
                        validators: {
                            stringLength: {
                                max: 255
                            }
                        }
                    },

                }
            });
        })();

    });
</script>