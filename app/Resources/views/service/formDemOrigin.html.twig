<form id="dem_origin" name="dem_origin" method="post">
    <div class="form-group form-material">
        <label class="form-control-label">Dem name</label>
        <input type="text" id="dem_origin_demName" class="form-control" name="dem_origin[demName]" required="required" data-plugin="formMaterial">
    </div>
    <div class="form-group form-material">
        <label class="form-control-label">Discount</label>
        <input type="text" id="dem_origin_discount" class="form-control" name="dem_origin[discount]" required="required" data-plugin="formMaterial" min="0">
    </div>
    <div class="form-group form-material">
        <label class="form-control-label">Notes</label>
        <input type="text" id="dem_origin_notes" class="form-control" name="dem_origin[notes]">
    </div>
    <input type="hidden" id="dem_origin__token" name="dem_origin[_token]" value="{{ formDemOrigin._token.vars.value }}">
    <button type="submit" id="dem_origin_save" class="btn btn-primary waves-effect waves-light" name="dem_origin[save]">Add dem origin</button>
</form>

<script>
    $( document ).ready(function() {

        // Validation
        // ---------------------------------
        (function() {
            $('#dem_origin').formValidation({
                framework: "bootstrap4",
                button: {
                    selector: '#dem_origin_save'
                },
                icon: null,
                err: {
                    clazz: 'text-help'
                },
                row: {
                    invalid: 'has-danger'
                },
                fields: {
                    "dem_origin[demName]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            },
                            stringLength: {
                                min: 3,
                                max: 50
                            }
                        }
                    },
                    "dem_origin[discount]": {
                        validators: {
                            integer: {
                                message: 'The discount is not valid, only number without space'
                            },
                            stringLength: {
                                min: 1,
                                max: 3
                            }
                        }
                    },
                    "dem_origin[notes]": {
                        validators: {
                            stringLength: {
                                max: 255
                            }
                        }
                    }

                }
            });
        })();

    });
</script>