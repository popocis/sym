                            <div class="list-editable">
                            <div class="form-group form-material">
                                <input type="text" class="form-control empty" name="label" value="{{ calendar.name }}">
                                <button type="button" class="input-editable-close icon md-close" data-toggle="list-editable-close" aria-label="Close" aria-expanded="true"></button>
