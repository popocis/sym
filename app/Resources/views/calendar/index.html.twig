                <div class="list-group has-actions">
                    {% for calendar in calendars %}
                    <div class="list-group-item" data-plugin="editlist" data-color="{{ calendar.color }}" data-type="{{ calendar.dateName }}">
                        <div class="list-content">
                            <span class="item-right js-count"></span>
                            <i class="md-circle m-r-10" style="color:{{ calendar.color }}" aria-hidden="true"></i>
                            <span class="list-text">{{ calendar.name|trans }}</span>
                            <div class="item-actions">
