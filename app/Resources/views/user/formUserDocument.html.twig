<form id="user_document" name="user_document" method="post" enctype="multipart/form-data">
    <div class="col-xs-12">
        <div class="form-group form-material">
            <label class="form-control-label">Document name <span class="required">*</span></label>
            <input type="text" id="user_document_name" class="form-control" name="user_document[name]" required="required">
        </div>
        <div class="form-group form-material floating" data-plugin="formMaterial">
            <label class="form-control-label">Document type <span class="required">*</span></label>
            <select id="user_document_documentType" name="user_document[documentType]" data-plugin="select2" data-placeholder="Select document type" data-allow-clear="true"  aria-hidden="true" required="required">
                <option></option>
                <option value="panoramic">dental panoramic</option>
                <option value="quote">quote</option>
                <option value="id">id document</option>
                <option value="other">other document</option>
            </select>
        </div>
        <div class="input-group input-group-file" data-plugin="inputGroupFile">
            <div class="vich-file">
                <input type="file" id="user_document_documentFile_file" class="form-control" name="user_document[documentFile][file]" required="required">
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <input type="hidden" id="user_document__token" name="user_document[_token]" value="{{ formDocument._token.vars.value }}">
        <button type="button" class="btn btn-default btn-pure" data-dismiss="modal">Close</button>
        <button type="submit" id="user_document_save" class="btn btn-primary waves-effect waves-light" name="user_document[save]">Add document</button>
    </div>
</form>

<script>
    $( document ).ready(function() {

        // Validation
        // ---------------------------------
        (function() {
            $('#user_document').formValidation({
                framework: "bootstrap4",
                button: {
                    selector: '#user_document_save'
                },
                icon: null,
                err: {
                    clazz: 'text-help'
                },
                row: {
                    invalid: 'has-danger'
                },
                fields: {
                    "user_document[name]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            }
                        }
                    },
                    "user_document[documentType]": {
                        validators: {
                            notEmpty: {
                                message: 'required'
                            }
                        }
                    }
                }
            });
        })();

    });
</script>

