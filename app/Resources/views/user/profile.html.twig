{% extends 'base.html.twig' %}

{% block body %}

    {# renders all fields #}
    {#{ form_widget(form) }#}

    {# renders all fields *and* the form start and end tags #}
    {#{ form(form) }#}

    <div class="row">
        <div class="col-sm-6">
            <!-- Panel Static Labels -->
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">USER PROFILE</h3>
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}
                    {{ form_errors(form.phoneNumber) }}
                    <form name="form" method="post">
                        {% if is_granted('ROLE_ADMIN') %}
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="text" id="form_name" class="form-control" name="form[name]" value="{{ user.name }}" required="required" data-plugin="formMaterial">
                            <label class="floating-label" for="form_name">Name</label>
                        </div>
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="text" id="form_surname" class="form-control" name="form[surname]" maxlength="255" pattern=".{3,}" value="{{ user.surname }}" required="required" data-plugin="formMaterial">
                            <label class="floating-label" for="form_surname">Surname</label>
                        </div>
                        {% endif %}
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="number" id="form_phoneNumber" class="form-control" name="form[phoneNumber]" maxlength="20" pattern="[0-9]{6,20}" value="{{ user.phoneNumber }}" required="required" data-plugin="formMaterial">
                            <label class="floating-label" for="form_phoneNumber">Phone number</label>
                        </div>
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="text" id="form_taxCode" class="form-control" name="form[taxCode]" maxlength="16" pattern=".{11,}" value="{{ user.taxCode }}">
                            <label class="floating-label" for="form_taxCode">Tax code</label>
                        </div>
                        {{ form_row(form._token) }}
                        <button type="submit" id="form_save" class="btn btn-primary waves-effect waves-light" name="form[save]">Update profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}