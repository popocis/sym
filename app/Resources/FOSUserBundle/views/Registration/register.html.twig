{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    {# 3 modi per renderizzare la form #}

    {# 1 includendo direttamente da FOSUserBundle #}
    {#% include "FOSUserBundle:Registration:register_content.html.twig" %#}

    {# 2 manualmente (attenzione anche a produrre il token -> per ogni tipo di form fosuserbundle usa un tipo diverso. In questo caso csrf_token('registration')) #}
    <form name="fos_user_registration_form" method="post" action="/register/" class="fos_user_registration_register">
        <div id="fos_user_registration_form">
            <div>
                <label for="fos_user_registration_form_email" class="required">form.email</label>
                <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required">
            </div>
            <div>
                <label for="fos_user_registration_form_plainPassword_first" class="required">form.password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required">
            </div>
            <div>
                <label for="fos_user_registration_form_plainPassword_second" class="required">form.password_confirmation</label>
                <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required">
            </div>
            <div>
                <label for="fos_user_registration_form_name" class="required">Name</label>
                <input type="text" id="fos_user_registration_form_name" name="fos_user_registration_form[name]" required="required" maxlength="255" pattern=".{3,}">
            </div>
            <div>
                <label for="fos_user_registration_form_surname" class="required">Surname</label>
                <input type="text" id="fos_user_registration_form_surname" name="fos_user_registration_form[surname]" required="required" maxlength="255" pattern=".{3,}">
            </div>
            <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{ csrf_token('registration') }}">
        </div>
        <div>
            <input type="submit" value="registration.submit">
        </div>
    </form>


    {# 3 renderizzando i singoli campi (attenzione anche a produrre il token -> {{ form_rest(form) }} e relative label) #}
