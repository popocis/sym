{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    <body class="page-login-v3 layout-full">
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->


        <!-- Page -->
        <div class="page vertical-align text-xs-center" data-animsition-in="fade-in" data-animsition-out="fade-out">>
            <div class="page-content vertical-align-middle">
                <div class="panel">
                    <div class="panel-body">
                        <div class="brand">
                            <img class="brand-img" src="../../assets//images/logo-dark.png" alt="..." width="200">
                        </div>
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="form-group form-material floating" data-plugin="formMaterial">
                                <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" data-plugin="formMaterial"/>
                                <label class="floating-label" for="username">Email</label>
                            </div>
                            <div class="form-group form-material floating" data-plugin="formMaterial">
                                <input type="password" id="password" class="form-control" name="_password" required="required" />
                                <label class="floating-label" for="password">Password</label>
                            </div>
                            <div class="form-group clearfix">
                                <div class="checkbox-custom checkbox-inline checkbox-primary checkbox-lg pull-xs-left">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="inputCheckbox" for="remember_me">Remember me</label>
                                </div>
                                <a href="resetting/request" class="pull-xs-right" href="forgot-password.html">Forgot password?</a>
                            </div>
                            <button type="submit" id="_submit" class="btn btn-primary btn-block btn-lg m-t-40" name="_submit">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page -->

    </body>

{% endblock fos_user_content %}